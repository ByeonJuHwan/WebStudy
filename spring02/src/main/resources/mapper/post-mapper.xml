<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- com.example.spring02.mapper.PostMapper 인터페이스의 selectOrderByIdDesc() 메서드가 사용하게 될 SQL문장  -->
<mapper namespace="com.example.spring02.mapper.PostMapper">
    <select id="selectOrderByIdDesc"
        resultType="com.example.spring02.domain.Post">
        select * from POSTS order by ID desc
    </select>
    
    <insert id="insert">
        insert into POSTS (TITLE,CONTENT,AUTHOR,CREATED_TIME,MODIFIED_TIME) 
        values (#{title},#{content},#{author},sysdate,sysdate)
    </insert>


</mapper>